{
  "name": "x",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo build --filter '@xframework/*'",
    "ci:test": "concurrently pnpm:ci:test:*",
    "ci:test:lint": "eslint --max-warnings 0 .",
    "ci:test:pretty": "prettier --check .",
    "dev": "turbo dev --filter '@xframework/*'",
    "lint": "biome check . --write --unsafe",
    "prepare": "husky",
    "release": "turbo run build --filter '@xframework/*' && changeset publish",
    "test": "concurrently pnpm:test:*",
    "test:lint": "eslint --fix --max-warnings 0 .",
    "test:pretty": "prettier --write ."
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "eslint": "^9.18.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "neostandard": "^0.12.0",
    "prettier": "^3.4.2",
    "tsup": "^8.2.4",
    "turbo": "^2.0.14",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@changesets/cli": "^2.27.7"
  },
  "engines": {
    "node": ">=18"
  },
  "lint-staged": {
    "*": [
      "eslint --fix",
      "prettier --ignore-unknown --write"
    ]
  },
  "packageManager": "pnpm@10.0.0"
}
